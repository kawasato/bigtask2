<%= form_with(model: @user, local: true ,url: choose_edit_or_new ) do |f| %>
    
   
      <%= f.label :name %>
      <%= f.text_field :name %>
    
   
      <%= f.label :email %>
      <%= f.email_field :email %>
      
      <%= f.label :password %>
      <%= f.password_field :password %>
    
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
      
      <%= f.label :image %>
      <%= f.file_field :image %>

    <div class= "margin">
      <%= f.submit %>
    </div>
    <% end %>
  