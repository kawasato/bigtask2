<h1><%= @user.name %>のページ</h1>
<% if @user.image.url.present? %>
    <p><%= image_tag @user.image.url %></p>
<% end %>
<p>メールアドレス: <%= @user.email %></p>

  <%= link_to "お気に入りした投稿一覧へ", favorite_user_path(@user.id) %>
  <% if logged_in? %>
  <% if @user.id == current_user.id %>
    <%= link_to "編集", edit_user_path(@user.id) %> 
  <% end %> 
<% end %>


<div class= "margin">
  <a href="/" class="btn btn-default btn-sm" role="button">トップページへ</a>
</div>