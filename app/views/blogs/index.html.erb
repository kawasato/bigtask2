<div class="container-fluid">
  <h1>投稿一覧</h1>
  <div class="row">
    <div class="col-md-9 col-xs-12">
        <table>
          <tr>
            <th>画像</th>
            <th>記事</th>
            <th>投稿者</th>
            <th></th>
          </tr>
          <% @blogs.each do |blog| %>
          <tr>
            <td><%= image_tag(blog.image.url) %></td>
            <td><%= blog.content %></td>
            <td><%= blog.user.name %></td>
            <td><%= link_to '確認', blog_path(blog.id) %> 
            <% if logged_in? %>
              <% if blog.user_id == current_user.id %>
                <%= link_to "編集", edit_blog_path(blog.id) %> 
                <%= link_to '削除', blog_path(blog.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
              <% end %> 
            <% end %>
          </tr>
          <% end %>
        </table><br><br>
    </div>
  </div>
  
</div>
<div class= "margin">
  <a href="/" class="btn btn-default btn-sm" role="button">トップページへ</a>
</div>